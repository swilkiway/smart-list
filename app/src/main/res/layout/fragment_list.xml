<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrListFragment">
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/leftSideGuideline"
        app:layout_constraintGuide_percent=".05"/>
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/bottomGuideline"
        app:layout_constraintGuide_percent=".96"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listNameView"
        android:textSize="16pt"
        app:layout_constraintStart_toStartOf="@id/leftSideGuideline"/>
    <Button
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:id="@+id/listDelete"
        android:background="@drawable/ic_delete_black_24dp"
        app:layout_constraintStart_toStartOf="@id/listNameView"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/spinnerContainer"
        app:layout_constraintEnd_toEndOf="parent">
        <Button
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:id="@+id/listsButton"
            android:background="@drawable/ic_list_black_24dp"
            android:layout_gravity="end"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchLists"
            style="@style/overlayBox"
            android:visibility="invisible" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/groceryList"
        app:layout_constraintTop_toBottomOf="@id/listNameView"
        app:layout_constraintHeight_max="455dp"
        app:layout_constrainedHeight="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/groceryList"
        app:layout_constraintStart_toStartOf="@id/leftSideGuideline">
        <Button
            android:id="@+id/addItem"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_add_black_24dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/newItem"
            android:hint="@string/add_new_item"
            android:visibility="gone"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/done_shopping"
        android:id="@+id/doneShopping"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="@id/bottomGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>